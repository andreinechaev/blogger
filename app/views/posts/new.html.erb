<h1>New Post:</h1>
<%= form_for :post, url: posts_path do |f| %>
<p>
	<%= f.label :title %><br>
	<%= f.text_field :title, placeholder: 'Enter a title...' %>
</p>

<p>
	<%= f.label :text %><br>
	<%= f.text_area :text, :cols => "100%", :rows => "25%",
							 placeholder: 'Here will your text...' %>
</p>
<p>
	<%= f.submit %>
</p>

<% end %>

